<div class="nsw-content-block{{#if easy-read}} nsw-content-block__easy-read{{/if}}{{#if theme}} {{theme}}{{/if}}">
  {{#if img}}
    <div class="nsw-content-block__image">
      <img src="{{img}}" alt="{{heading}}{{alt}}">
    </div>
  {{/if}}
  {{#if icon}}
    <div class="nsw-content-block__image">
      <div class="nsw-content-block__icon">{{{icon}}}</div>
    </div>
  {{/if}}
  <div class="nsw-content-block__content">
    {{#if heading}}<div class="nsw-content-block__title">{{heading}}</div>{{/if}}
    {{#if easy-read}}<h2 class="sr-only">Easy Read</h2>{{/if}}
    {{#if copy}}<p class="nsw-content-block__copy{{#if easy-read}} nsw-easy-read{{/if}}">{{{copy}}}</p>{{/if}}
    {{#if list}}
      <ul class="nsw-content-block__list">
        {{#each list}}
        <li><a href="#">{{this}}</a></li>
        {{/each}}
      </ul>
    {{/if}}
    {{#if link}}<div class="nsw-content-block__link"><a href="#">{{link}}</a></div>{{/if}}
  </div>
</div>
